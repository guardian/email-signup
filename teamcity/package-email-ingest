#!/bin/bash

set -o xtrace
set -o nounset
set -o errexit
set -x

[ -d dist ] && rm -R dist

gulp buildEmailIngestHandler
gulp buildEmailIngestHandler --prod

[ ! -d target ] && mkdir target

cp deploy/deploy-email-ingest.json ./target/deploy.json

zip --junk-paths ./dist/artifact.zip dist/email-ingest-handler-*.zip target/deploy.json

rm target/deploy.json

